<div class="navbar-wagon">
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "yujams_logo.png", class: "navbar-icon" %>
  <% end %>
    <!-- Different navigation if login or not -->
    <div class="nav-options" >
      <form class="searchbox">
        <input type="search" placeholder="Search for jams" name="search" class="searchbox-input" onkeyup="buttonUp();" required>
        <input type="submit" class="searchbox-submit" value="GO">
        <span class="navbar-search searchbox-icon">GO</span>
      </form>
    </div>


    <% if user_signed_in? %>
      <div class="nav-options">
        <a><strong>Search</strong></a>

        <a ><span><%= link_to "Profile", user_show_path(current_user.id) %></span></a>
        <a ><span><%= link_to("Create", new_jam_path) %></span></a>
        <a ><span><%= link_to('Logout', destroy_user_session_path, method: :delete) %></span></a>
    <span><%= link_to "", user_show_path(current_user.id), :class => "shopping-cart" %></span>
      </div>
    <% else %>
      <div class="nav-options">

      <%= form_tag results_path, method: :get, class: "search-form" do %>
            <%= text_field_tag :query, params[:query], id: "hiddenInput", autocomplete: "off", placeholder: "Search for previous entries..", class: "form-control" %>
          <% end %>

       <!-- <a><strong>Search</strong></a> -->
        <a data-toggle="modal" data-target="#login"><span>Login</span></a>
      </div>
    <% end %>
    <!-- Login Modal -->
    <div class="modal" id="login" >
      <%= render "devise/shared/log" %>
    </div>
    <!-- Signup Modal -->
    <div class="modal" id="signup" >
      <%= render "devise/shared/reg" %>
    </div>
  </div>
</div>

