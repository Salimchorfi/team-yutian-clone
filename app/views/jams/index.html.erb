<!-- Navbar -->
<%= render 'layouts/navbar' %>

<div class="index-container">
  <div class="index-description">
    <span>Hello, and welcome to our community. We are here to satisfy your every jam related need. We also sell guns. Please, make yourself at home.</span>
  </div>
  <div class="index-title">
    <span id="index-title">Explore jams</span>
    <a href="#" id="map-btn">
      <span id="index-map-title">Map</span>
    </a>
  </div>

  <div class="index-image">
      <div class="row product-row">
        <div class="product-display product-display-50">
            <% @jams.each  do |image| %>
                <div class="product-item">
                <%= cl_image_tag( image.photo, width: 155, height: 155, crop: :scale) %>
                <%= link_to("c#{image.price}", jam_path(image), class: "index-price") %>
                </div>
            <% end %>
        </div>

          <div class="map-container-50" id="map-container">
            <div id="map" style="width: 100%; height: 600px;"></div>
          </div>

      </div>
  </div>
</div>


<!-- MAP -->
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>


<!-- SLIDER -->
<% content_for(:after_js) do %>
  <%= javascript_tag do %>

    $(document).ready(function() {
      $('#map-btn').on("click", function(event) {
        if ($('#map').is(":visible")) {
          $('#map').hide();
          $(".product-display").removeClass("product-display-50");
        } else {
          $('#map').show();
          $(".product-display").addClass("product-display-50");
        }

      });
    });

  <% end %>
<% end %>
















