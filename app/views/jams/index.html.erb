<!-- Navbar -->
<%= render 'layouts/navbar' %>

<div class="index-container">
  <div class="index-description">
    <span>Hello, and welcome to our community. We are here to satisfy your every jam related need. We also sell guns. Please, make yourself at home.</span>
  </div>
  <div class="index-title">
    <span id="index-title">Explore jams</span>
    <a href="#" id="map-btn">
      <span id="index-map-title">Map</span>
    </a>
  </div>

  <div class="index-image">
    <div class="container">
      <div class="row">
        <div class="image-card">

          <% @jams.each  do |image| %>
               <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 " id="image-div-sizing">
              <%= cl_image_tag( image.photo, width: 155, height: 155, crop: :scale) %>
              <%= link_to("c#{image.price}", jam_path(image), class: "index-price") %>
              </div>
          <% end %>

            <div class="row">
              <div class="col-lg-6 map-container">
                <div id="map google-map" style="width: 100%; height: 600px;"></div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>

    $(document).ready(function() {
      $(document).on("click", function(event) {
        if ($('#google-map').is(":visible")) {

          $('#google-map').hide();
          $("#image-div-sizing").removeClass();
          $("#image-div-sizing").addClass("col-xs-6 col-sm-4 col-md-3 col-lg-2 indivudual-image");

        } else {

          $('#google-map').show();
          $("#image-div-sizing").removeClass();
          $("#image-div-sizing").addClass("col-lg-6 indivudual-image");

        }

      });
    });

  <% end %>
<% end %>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
















