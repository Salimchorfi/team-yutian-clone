<% content_for(:after_js) do %>
  <%= javascript_tag do %>

    $(document).ready(function() {
      $('#map-btn').on("click", function(event) {
        if ($('#map').is(":visible")) {

          $('#map').hide();
          $(".product-display").removeClass("product-display-50");
          $('#map-container').hide();

        } else {

          $('#map').show();
          $('#map-container').show();
          $(".product-display").addClass("product-display-50");

        }

      });
    });

  <% end %>
<% end %>











